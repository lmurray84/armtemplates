{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VM_Name": {
            "type": "String"
        },
        "VM_Size": {
            "type": "string",
            "defaultValue": "Standard_B2s",
            "allowedValues": [
                "Standard_B1s",
                "Standard_B2s",
                "Standard_B1ms",
                "Standard_B4ms",
                "Standard_DS1_v2",
                "Standard_D2s_v3"
            ]
        },
        "VM_Sku": {
            "type": "string",
            "defaultValue": "2019-Datacenter",
            "allowedValues": [
                "2019-Datacenter",
                "2016-Datacenter"
            ]
        },
        "VM_AdminUsername": {
            "type": "string",
            "minLength": 6
        },
        "VM_AdminPassword": {
            "type": "securestring",
            "minLength": 6
        },
        "VM_VNet": {
            "type": "string",
            "allowedValues": [
                "vnet-weu-private",
                "vnet-weu-public"
            ]
        },
        "VM_Subnet": {
            "type": "string",
            "defaultValue": "default"  
        }
},
    "variables": {
        "VM_Publisher": "MicrosoftWindowsServer",
        "VM_Offer": "WindowsServer",
        "VM_OsType": "Windows",
        "VM_Subnet": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VM_VNet'), parameters('VM_Subnet'))]"
    },
    "resources": [
        {"type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-11-01",
            "name": "[parameters('VM_Name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('VM_Subnet')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "[parameters('VM_Name')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', parameters('VM_Name'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VM_Size')]"
                },
                "osProfile": {
                    "computerName": "[parameters('VM_Name')]",
                    "adminUsername": "[parameters('VM_AdminUsername')]",
                    "adminPassword": "[parameters('VM_AdminPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('VM_Publisher')]",
                        "offer": "[variables('VM_Offer')]",
                        "sku": "[parameters('VM_Sku')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "[variables('VM_OsType')]",
                        "name": "[concat(parameters('VM_Name'), '_Disk_1_OS')]",
                        "createOption": "FromImage",
                        "caching": "ReadOnly"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('VM_Name'))]"
                        }
                    ]
                }
                
            }
    
        }
    ]
}
